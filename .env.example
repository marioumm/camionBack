# ================================
# Camion Back — .env.example
# NOTE: Placeholder/example values only. Do not put real secrets here.
# ================================

# ----------------
# App & Networking
# ----------------
# (required) HTTP port for API Gateway
API_GATEWAY_HTTP_PORT=5000

# (required) TCP port for API Gateway microservice server
API_GATEWAY_TCP_PORT=4000

# (required) Bind host for microservice servers (most services)
TCP_BIND_HOST=0.0.0.0

# (required) Bind host for API Gateway microservice (server inside API Gateway)
TCP_HOST=0.0.0.0

# ----------------
# Database (PostgreSQL)
# ----------------
# (required) DB host (docker-compose service name in dev)
POSTGRES_HOST=postgres_db
# (required)
POSTGRES_PORT=5432
# (required)
POSTGRES_DB=camion
# (required)
POSTGRES_USER=camion
# (required)
POSTGRES_PASSWORD=changeme

# ----------------
# Microservice TCP Ports
# ----------------
# (required) Ports each service listens on
USERS_TCP_PORT=4001
AFFILIATE_TCP_PORT=4002
CART_TCP_PORT=4003
WISHLIST_TCP_PORT=4004
ORDERS_TCP_PORT=4005
SETTINGS_TCP_PORT=4006
# (required) Notification has a default of 4010 in code
NOTIFICATION_TCP_PORT=4010

# ----------------
# Microservice Hosts (service discovery / client connections)
# Use docker-compose service names in dev so services can reach each other on the bridge network
# ----------------
# (required)
USERS_HOST=users-service
# (required)
AFFILIATE_HOST=affiliate-service
# (required)
CART_HOST=cart-service
# (required)
WISHLIST_SERVICE_HOST=wishlist-service
# (required)
ORDER_SERVICE_HOST=orders-service
# (required)
SETTINGS_SERVICE_HOST=settings-service
# (required) Also used by the notification service itself as its bind host
# In docker-compose, using the service name works for clients; if binding fails, try 0.0.0.0
NOTIFICATION_SERVICE_HOST=notification-service

# ----------------
# Auth & JWT
# ----------------
# (required) JWT signing secret for access tokens
JWT_SECRET=your_jwt_secret_here

# ----------------
# Email (Twilio SendGrid)
# ----------------
# (required) API key for Twilio SendGrid (email delivery)
SENDGRID_API_KEY=your-sendgrid-api-key
# (required) Verified sender email address for SendGrid
SENDGRID_FROM_EMAIL=no-reply@example.com

# ----------------
# AWS S3 (Settings Service uploads)
# ----------------
# (required)
AWS_REGION=us-east-1
# (required)
AWS_ACCESS_KEY_ID=AKIA...EXAMPLE
# (required)
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# (required) S3 bucket to store assets like logos
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# ----------------
# Firebase (Notifications Service)
# ----------------
# (required) Base64-encoded Firebase service account JSON
FIREBASE_CREDENTIALS_BASE64=BASE64_OF_SERVICE_ACCOUNT_JSON

# ----------------
# External Integrations
# ----------------
# WooCommerce backend base URL (used for product sync/checkout)
# (required)
WC_BASE_URL=https://your-woocommerce-proxy.example.com

# SkipCash payment gateway
# (required)
SKIPCASH_BASE_URL=https://api.skipcash.com
# (required)
SKIPCASH_KEY_ID=your-skipcash-key-id
# (required)
SKIPCASH_KEY_SECRET=your-skipcash-key-secret
# (required for webhook verification)
SKIPCASH_WEBHOOK_KEY=your-skipcash-webhook-secret

# Google Translate API (used for translating product titles / variations)
# (optional)
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# ----------------
# Twilio (OTP & SMS in Users Service)
# ----------------
# (required)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# (required)
TWILIO_AUTH_TOKEN=your-twilio-auth-token
# (required) Verify Service SID (for OTP)
TWILIO_VERIFY_SID=VAXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# (required) E.164 format
TWILIO_PHONE_NUMBER=+10000000000

# ----------------
# Special/Test User Login (Users Service) — Optional
# ----------------
# (optional) If set, login will accept a fixed OTP for this email/phone
SPECIAL_USER_EMAIL=special@example.com
SPECIAL_USER_PHONE=+10000000000
# (optional) Default 111111 if not provided
FIXED_OTP=111111

# ----------------
# Dev Tools (docker-compose)
# ----------------
# (optional) pgAdmin web UI
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_PORT=5050
